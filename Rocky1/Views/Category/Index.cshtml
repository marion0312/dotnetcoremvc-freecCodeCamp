@model IEnumerable<Rocky1.Models.Category>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2>Category List</h2>
            </div>
            <div class="col-6 text-right">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                    <i class="fas fa-plus"></i>
                    Create New Category
                </a>
            </div>
        </div>


        <br /><br />

        @if(Model.Count() > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a class="btn btn-primary mx-2" asp-route-Id="@obj.Id" asp-controller="Category" asp-action="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-danger mx-2" asp-route-Id="@obj.Id" asp-controller="Category" asp-action="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        { 
            <p>No category exist...</p>
        }
    </div>

